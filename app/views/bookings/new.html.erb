<h1>New Booking for: <%= "#{@space.name}" %></h1>



<%= simple_form_for [@space, @booking], method: "get" do |f| %>
  <div class="form-inputs w-50">
    <%= f.input :start_date, as: :string, input_html: {class: "datepicker"} %>
    <%= f.input :end_date, as: :string, input_html: {class: "datepicker"} %>
    <p><%= "Price per day #{@space.price}"  %></p>
    <%= f.button :submit, value: "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
