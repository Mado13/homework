<div class="container">
  <div class="space-overview-top">
    <div class="d-flex justify-content-between">
      <h4><%= @space.name %></h4>
      <h6><%= link_to "Book this space", new_space_booking_path(@space), class: "btn btn-primary" %></h6>
    </div>
    <p><%= @space.description %></p>
    <div id="carouselExampleIndicators" class="carousel slide box-shadow" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
    <div class="image-carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100"
            src="https://res.cloudinary.com/dkavj1tat/image/upload/v1637060631/homework/barber3_s9ngtw.jpg"
            alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100"
            src="https://res.cloudinary.com/dkavj1tat/image/upload/v1637060630/homework/barber_1_pqed9x.jpg"
            alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100"
            src="https://res.cloudinary.com/dkavj1tat/image/upload/v1637060627/homework/barber2_amuk9e.jpg"
            alt="Third slide">
        </div>
      </div>
    </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <p>ðŸŒŸ Rating: <%= @space.rating %></p>
  </div>
  <div class="space-body">
    <p><%= @space.workspace_type %>For Rent By: <%= @user.email %></p>
  </div>
  <div class="d-flex justify-content-between center-show">
    <div class="box-shadow" id="map" style="width: 45%; height: 300px;" data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    <div class="box-shadow" style="width: 45%;height:300px;border:1px solid #000;" class="text-center">Create Booking</div>
  </div>
  <div class="show-bottom">
    <div class="container text-center">
      <h4>Amenitis:</h4>
        <div class="amenities">
          <ul class="amenities-list">
            <% @space.amenities.split(" ").each do |amenitie| %>
              <li><i class="<%= @icons[:"#{amenitie}"] %>"></i></li>
            <% end %>
          </ul>
        </div>
    </div>
    <div class="reviews">
      <p><%= @space.name %> Reviews:</p>
        <% @space.reviews.each do |review| %>
          <p><%= review.comment %></p>
        <% end %>
    </div>
  </div>
</div>
