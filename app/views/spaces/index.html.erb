<div class="container-width">

<div class="header-index">
  <div class="search-bar">
    <input type="text" id="myInput" onkeyup="" placeholder="Search for names..">
  </div>
  <div id="myBtnContainer">
      <button class="btn active" onclick="filterSelection('all')"> Show all</button>
      <button class="btn" onclick="filterSelection('ascendingprice')"> Ascending by price</button>
      <button class="btn" onclick="filterSelection('descendingprice')"> Descending by price</button>
      <button class="btn" onclick="filterSelection('ascending by rating')"> Ascending by rating</button>
      <button class="btn" onclick="filterSelection('descending by rating')"> Descending by rating</button>
  </div>
  <div>
    <h1 class="text-center">Spaces available for rent</h1>
  </div>
</div>
<div>
    <div class="grid-container">
      <% @spaces.each do |space| %>
        <div class="grid-item">
          <div class="card">
  <div class="card-container">
    <div class="property-image d-flex justify-content-center"><img src="https://www.rocketmortgage.com/resources-cmsassets/RocketMortgage.com/Article_Images/Large_Images/TypesOfHomes/types-of-homes-hero.jpg"></div>
    <div class="d-flex justify-content-between">
      <div>
        <h1><%= link_to space.name, space_path(space) %></h1>
        <h2><%= space.price %>â‚¬</h2>
        <h3><%= space.address %></h3>
      </div>
    <div class="user-avatar align-content-center"><img src="https://www.allthetests.com/quiz22/picture/pic_1171831236_1.png?1592828498" alt=""></div>
    </div>
    <div class="d-flex justify-content-center">
      <button class="card-button">Rent</button>
    </div>
</div>
</div>
        </div>
      <% end %>
    </div>
  </div>
</div>

