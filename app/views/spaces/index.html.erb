<div class="container-width">


<%# <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names.."> %>

<div id="myBtnContainer" class="d-flex align-items-center justify-content-between">
  <button class="button-show-all filters active"><%= link_to "Show All", controller: "spaces", action: "index" %></button>
  <% @spaces.each do |space| %>
  <button
    class="button-filter filters"><%= link_to "#{space.workspace_type}", controller: "spaces", action: "index", query: "#{space.workspace_type}"  %>
  <% end %>
</div>
<div>
    <div class="grid-container">
      <% @spaces.each do |space| %>
        <div class="grid-item">
          <div class="card">
            <div style="background-image: url('<%= cl_image_path space.photos.first.key, crop: :fill %>'); background-size: cover; background-position: center; opacity: 0.5" class="card-body-image"></div>
            <div class="d-flex justify-content-between">
              <div>
                <p><%= link_to space.name, space_path(space) %></p>
                <p><%= space.price %>â‚¬</p>
                <p><%= space.address %></p>
                <p>Rating</p>
              </div>
              <div class="user-avatar align-content-center"><img src="https://www.allthetests.com/quiz22/picture/pic_1171831236_1.png?1592828498" alt="">
              </div>
            </div>
            <div class="d-flex justify-content-center">
              <%= link_to "Rent", space_path(space), class: "card-button" %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
</div>


