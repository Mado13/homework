<div class="container-width">


<%# <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names.."> %>

<div id="myBtnContainer" class="d-flex container">
  <button class="btn active"><%= link_to "Show All", controller: "spaces", action: "index" %></button>
  <% @spaces.each do |space| %>
  <button
    class="btn"><%= link_to "#{space.workspace_type}", controller: "spaces", action: "index", query: "#{space.workspace_type}"  %>
  <% end %>
</div>
<div>
    <div class="grid-container">
      <% @spaces.each do |space| %>
        <div class="grid-item">
          <div class="card">
            <div
              style="background-image: url('<%= cl_image_path space.photos.first.key , height: 300, crop: :fill %>'); background-size: cover; background-position: center; opacity: 0.5" class="card-body">
              <h2 class="card-title"><%= link_to space.name, space_path(space) %></h2><br>
              <h4 class="card-subtitle"> <%= space.description %> </h4><br>
              <p class="card-text"> <%= space.address %></p>
              <p> Available </p>
            </div>
            <div class="card-footer d-flex justify-content-between">
              <p>Space rated: X</p>
              <p> <%= space.price %>â‚¬</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-container">
    <div class="property-image d-flex justify-content-center"><img src="https://www.rocketmortgage.com/resources-cmsassets/RocketMortgage.com/Article_Images/Large_Images/TypesOfHomes/types-of-homes-hero.jpg"></div>
    <div class="d-flex justify-content-between">
      <div>
        <h1>Property name</h1>
        <h2>Property price</h2>
        <h3>Property rating</h3>
      </div>
    <div class="user-avatar align-content-center"><img src="https://www.allthetests.com/quiz22/picture/pic_1171831236_1.png?1592828498" alt=""></div>
    </div>
    <div class="d-flex justify-content-center">
      <button class="card-button">Rent</button>
    </div>
</div>
</div>

<div class="footer">
  <h1></h1>
</div>
