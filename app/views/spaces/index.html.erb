<div class="container-width">

<input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names..">

<div id="myBtnContainer">
    <button class="btn active" onclick="filterSelection('all')"> Show all</button>
    <button class="btn" onclick="filterSelection('ascendingprice')"> Ascending by price</button>
    <button class="btn" onclick="filterSelection('descendingprice')"> Descending by price</button>
    <button class="btn" onclick="filterSelection('ascending by rating')"> Ascending by rating</button>
    <button class="btn" onclick="filterSelection('descending by rating')"> Descending by rating</button>
</div>
  <h1 class="text-center">Spaces available for rent</h1>
    <div class="grid-container">
      <% @spaces.each do |space| %>
        <div class="grid-item">
          <div class="card">
            <div style="background-image: url('https://s30131.pcdn.co/wp-content/uploads/iStock-1226234257-1.jpg'); background-size: cover; background-position: center; opacity: 0.5" class="card-body">
              <h2 class="card-title"><%= link_to space.name, space_path(space) %></h2><br>
              <h4 class="card-subtitle"> <%= space.description %> </h4><br>
              <p class="card-text"> <%= space.country %> <%= space.city %> <%= space.street %></p>
              <p> Available </p>
            </div>
            <div class="card-footer d-flex justify-content-between">
              <p>Space rated: X</p>
              <p> <%= space.price %>â‚¬</p>
            </div>
          </div>
        </div>
      <% end %>
</div>
</div>
