<div class="container">
  <h1>Create new Listing:</h1>
  <%= simple_form_for(@space, url: spaces_path, method: :post) do |f| %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description, as: :text %>
      <%= f.input :workspace_type %>
      <%= f.input :price, label: "Price per day:" %>
      <div class="address d-flex justify-content-between">
        <%= f.input :street_number, label: 'Enter house number:' %>
        <%= f.input :street, label: 'Enter street:' %>
        <%= f.input :city, label: 'City:' %>
        <%= f.input :country, as: :string %>
      </div>
      <div class="d-flex">
       <%= simple_fields_for :amenities do |o| %>
        <%= o.input :amenities, as: :check_boxes, collection: Space::AMENITIES, include_hidden: false, label: 'What amenities you space offer:' %>
       <% end %>
      </div>
      <%= f.submit %>
    </div>
  <% end %>
</div>
